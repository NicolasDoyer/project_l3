{% extends 'base.html.twig' %}

{% block title %} Home {% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header text-center">Gestion du compte de {{ app.user.username }}</h5>
                    <div class="card-body">
                        <div>
                            <div class="form-group">
                                <p><span class="label">Email : </span> {{ app.user.email }}</p>
                            </div>
                            <div class="form-group">
                                <p><span class="label">Nom complet : </span> {{ app.user.fullName }}</p>
                            </div>
                            <div class="form-group">
                                <p><span class="label">Score : </span> {{ app.user.score }}</p>
                            </div>
                        </div>

                        <form action="{{ path('delete_profile') }}" method="post">
                            <button class="btn btn-danger" type="submit">Supprimer le profile</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% if team %}

        <div class="row">
            <div class="col-md-12">
            <div class="card">

                <h5 class="card-header text-center">Groupe {{ team.name }}</h5>
                <div class="card-body">
                    <div class="form-group">
                        <p><span class="label">Tag : </span>{{ team.tag }}</p>
                    </div>
                    <form action="{{ path('team_leave') }}" method="post">
                        <button class="btn btn-danger" type="submit">Quitter le groupe</button>
                    </form>
                </div>
            </div>
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}

