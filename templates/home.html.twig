{% extends 'base.html.twig' %}

{% block title %} Home {% endblock %}

{% block body %}

    <p>Home</p>

    {{ form_start(form) }}
    {{ form_row(form.name) }}

    <button type="submit">Créer une équipe</button>
    {{ form_end(form) }}

    <div class="card">
        <h5 class="card-header">Rejoindre une équipe</h5>
        <div class="card-body">
            <form action="{{ path('team_join') }}" method="post">
                <fieldset>
                    <legend><i class="fa fa-lock" aria-hidden="true"></i>Rejoindre une équipe</legend>
                    <div class="form-group">
                        <label for="tag">Tag</label>
                        <input type="text" id="tag" name="tag" value="" class="form-control"/>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-sign-in" aria-hidden="true"></i>Rejoindre
                    </button>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}
